@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-5">Welcome to the Management Portal</h1>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Categories</h5>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">Manage Categories</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Products</h5>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Manage Products</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Inventory</h5>
                    <a asp-controller="InventoryTransactions" asp-action="Index" class="btn btn-primary">Inventory Transactions</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Purchase Orders</h5>
                    <a asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-primary">Manage Purchase Orders</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Sales</h5>
                    <a asp-controller="SalesOrders" asp-action="Index" class="btn btn-primary">Manage Sales</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Customers</h5>
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-primary">Manage Customers</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Suppliers</h5>
                    <a asp-controller="Suppliers" asp-action="Index" class="btn btn-primary">Manage Suppliers</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Shipments</h5>
                    <a asp-controller="Shipments" asp-action="Index" class="btn btn-primary">Manage Shipments</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }
    .card-title {
        color: #2c3e50;
        font-weight: 600;
    }
    .btn-primary {
        background-color: #3498db;
        border: none;
    }
    .btn-primary:hover {
        background-color: #2980b9;
    }
</style>