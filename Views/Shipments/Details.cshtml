@model Mini_ERP.Models.Shipment

@{
    ViewData["Title"] = "Shipment Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-truck"></i> Shipment Details
            </h3>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-hash"></i> ID
                        </dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Id)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-truck"></i> Status
                        </dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-clock"></i> Shipped Date
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @(Model.ShippedDate.HasValue ? Model.ShippedDate.Value.ToString("g") : "Not set")
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-calendar-check"></i> Delivery Date
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @(Model.DeliveryDate.HasValue ? Model.DeliveryDate.Value.ToString("g") : "Not set")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }

        dt {
            font-weight: 500;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
