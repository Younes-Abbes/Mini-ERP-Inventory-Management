@model IEnumerable<Mini_ERP.Models.Shipment>

@{
    ViewData["Title"] = "Shipments";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="bi bi-truck"></i> Shipments
            </h3>
            <div class="mt-3">
                <a asp-action="Create" class="btn btn-light">
                    <i class="bi bi-plus-circle"></i> Create New
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Status</th>
                            <th>Shipped Date</th>
                            <th>Delivery Date</th>
                            <th class="pe-4 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Id</td>
                                <td>@item.Status</td>
                                <td>
                                    @(item.ShippedDate.HasValue ? item.ShippedDate.Value.ToString("g") : "Not set")
                                </td>
                                <td>
                                    @(item.DeliveryDate.HasValue ? item.DeliveryDate.Value.ToString("g") : "Not set")
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
