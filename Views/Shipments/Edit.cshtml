@model Mini_ERP.Models.Shipment

@{
    ViewData["Title"] = "Edit Shipment";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-pencil-square"></i> Edit Shipment
            </h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Status" class="form-label fw-bold">
                        <i class="bi bi-truck"></i> Shipment Status
                    </label>
                    <select asp-for="Status" class="form-control form-control-lg"
                            asp-items="Html.GetEnumSelectList<Mini_ERP.Models.ShipmentStatus>()">
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-clock"></i> Shipped Date
                    </label>
                    <input type="text" class="form-control form-control-lg"
                           value="@(Model.ShippedDate?.ToString("g") ?? "Not set")" readonly />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar-check"></i> Delivery Date
                    </label>
                    <input type="text" class="form-control form-control-lg"
                           value="@(Model.DeliveryDate?.ToString("g") ?? "Not set")" readonly />
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }

        .form-control-lg {
            border-radius: 0.5rem;
        }
    </style>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}


