@model Mini_ERP.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-exclamation-octagon"></i> Delete Category
            </h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
                <p>You are about to permanently delete this category. This action cannot be undone.</p>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-tag"></i> Name
                        </dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-card-text"></i> Description
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }

        dt {
            font-weight: 500;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}