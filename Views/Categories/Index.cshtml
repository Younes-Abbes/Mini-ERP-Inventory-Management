@model IEnumerable<Mini_ERP.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Categories</h2>
            <a asp-action="Create" class="btn btn-light">Create New</a>
        </div>
        <div class="card-body">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>
                            @if(Model.Any())
                            {
                                @Html.DisplayNameFor(model => model.First().Name)
                            }
                            else
                            {
                                @:Name
                            }
                        </th>
                        <th>
                            @if(Model.Any())
                            {
                                @Html.DisplayNameFor(model => model.First().Description)
                            }
                            else
                            {
                                @:Description
                            }
                        </th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
