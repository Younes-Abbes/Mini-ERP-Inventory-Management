@model Mini_ERP.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Edit Product</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" placeholder="Enter product description" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="minimumQuantity" class="form-label"></label>
                    <input asp-for="minimumQuantity" class="form-control" placeholder="Enter minimum quantity" />
                    <span asp-validation-for="minimumQuantity" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="UnitPrice" class="form-label"></label>
                    <input asp-for="UnitPrice" class="form-control" placeholder="Enter unit price" step="0.01" min="0" />
                    <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="CreatedAt" class="form-label"></label>
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="UpdatedAt" class="form-label"></label>
                    <input asp-for="UpdatedAt" class="form-control" />
                    <span asp-validation-for="UpdatedAt" class="text-danger small"></span>
                </div>
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
