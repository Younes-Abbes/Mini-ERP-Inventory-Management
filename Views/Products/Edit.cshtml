@model Mini_ERP.Models.Requests.Edit.EditProductRequest

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-pencil-square"></i> Edit Product
            </h3>
        </div>

        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <div class="row g-4">
                    <!-- Product Name -->
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-bold">
                            <i class="bi bi-tag"></i> Product Name
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter product name">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Price -->
                    <div class="col-md-6">
                        <label asp-for="UnitPrice" class="form-label fw-bold">
                            <i class="bi bi-currency-dollar"></i> Unit Price
                        </label>
                        <input asp-for="UnitPrice" class="form-control form-control-lg" placeholder="0.00">
                        <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                    </div>

                    <!-- Quantity -->
                    <div class="col-md-4">
                        <label asp-for="Quantity" class="form-label fw-bold">
                            <i class="bi bi-box-seam"></i> Current Quantity
                        </label>
                        <input asp-for="Quantity" class="form-control form-control-lg">
                        <span asp-validation-for="Quantity" class="text-danger small"></span>
                    </div>

                    <!-- Minimum Quantity -->
                    <div class="col-md-4">
                        <label asp-for="minimumQuantity" class="form-label fw-bold">
                            <i class="bi bi-exclamation-triangle"></i> Minimum Quantity
                        </label>
                        <input asp-for="minimumQuantity" class="form-control form-control-lg">
                        <span asp-validation-for="minimumQuantity" class="text-danger small"></span>
                    </div>

                    <!-- Category -->
                    <div class="col-md-4">
                        <label asp-for="category" class="form-label fw-bold">
                            <i class="bi bi-diagram-3"></i> Category
                        </label>
                        <select asp-items="Model.categories" asp-for="category"
                                class="form-select form-select-lg"
                                data-live-search="true">
                            
                        </select>
                        <span asp-validation-for="category" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-bold">
                            <i class="bi bi-card-text"></i> Description
                        </label>
                        <textarea asp-for="Description" class="form-control form-control-lg"
                                  rows="3" placeholder="Product description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Hidden Fields -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="createdAt" />
                <input type="hidden" asp-for="UpdatedAt" />

                <!-- Submit Button -->
                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg ms-2 px-5">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 0.5rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}