@model Mini_ERP.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-info-circle"></i> Product Details
            </h3>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <!-- Left Column -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-tag"></i> Name
                        </dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-card-text"></i> Description
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-box-seam"></i> Quantity
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary fs-6">
                                @Html.DisplayFor(model => model.Quantity)
                            </span>
                        </dd>
                    </dl>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-currency-dollar"></i> Unit Price
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-exclamation-triangle"></i> Min Quantity
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.minimumQuantity)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-calendar-plus"></i> Created
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-calendar-check"></i> Updated
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }

        dt {
            font-weight: 500;
        }

        .badge {
            padding: 0.5em 0.75em;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}