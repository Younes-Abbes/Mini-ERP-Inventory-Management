@model Mini_ERP.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-exclamation-octagon"></i> Delete Product
            </h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
                <p>You are about to permanently delete this product. This action cannot be undone.</p>
            </div>

            <div class="row g-4 mb-4">
                <!-- Product Details -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-tag"></i> Name
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-card-text"></i> Description
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-box"></i> Quantity
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-currency-dollar"></i> Unit Price
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-exclamation-circle"></i> Min Quantity
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.minimumQuantity)</dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-calendar"></i> Created
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash3"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }

        dt {
            font-weight: 500;
        }

        dd {
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}