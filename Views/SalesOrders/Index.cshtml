@model IEnumerable<SalesOrder>

<h2>Sales Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Total Amount</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.customer.Name</td>
                <td>@order.createdAt.ToShortDateString()</td>
                <td>@order.Total.ToString("C")</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Sales Order</a>