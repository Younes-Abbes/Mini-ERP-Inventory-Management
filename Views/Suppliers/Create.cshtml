@model Mini_ERP.Models.Supplier

@{
    ViewData["Title"] = "Create Supplier";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-building-add"></i> Create Supplier
            </h3>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-4">
                    <label asp-for="CompanyName" class="form-label fw-bold">
                        <i class="bi bi-building"></i> Company Name
                    </label>
                    <input asp-for="CompanyName" class="form-control form-control-lg"
                           placeholder="Enter company name" required>
                    <span asp-validation-for="CompanyName" class="text-danger small"></span>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="ContactEmail" class="form-label fw-bold">
                            <i class="bi bi-envelope"></i> Contact Email
                        </label>
                        <input asp-for="ContactEmail" class="form-control form-control-lg"
                               placeholder="contact@company.com" required>
                        <span asp-validation-for="ContactEmail" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ContactPhone" class="form-label fw-bold">
                            <i class="bi bi-telephone"></i> Contact Phone
                        </label>
                        <input asp-for="ContactPhone" class="form-control form-control-lg"
                               placeholder="+1 (555) 123-4567">
                        <span asp-validation-for="ContactPhone" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="CompanyAddress" class="form-label fw-bold">
                        <i class="bi bi-geo-alt"></i> Company Address
                    </label>
                    <input asp-for="CompanyAddress" class="form-control form-control-lg"
                           placeholder="123 Business Street">
                    <span asp-validation-for="CompanyAddress" class="text-danger small"></span>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label fw-bold">
                            <i class="bi bi-globe"></i> Country
                        </label>
                        <input asp-for="Country" class="form-control form-control-lg"
                               placeholder="Country name">
                        <span asp-validation-for="Country" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PostalCode" class="form-label fw-bold">
                            <i class="bi bi-mailbox"></i> Postal Code
                        </label>
                        <input asp-for="PostalCode" class="form-control form-control-lg"
                               placeholder="XYZ 789">
                        <span asp-validation-for="PostalCode" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-save"></i> Create Supplier
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-radius: 1rem 1rem 0 0 !important;
        }

        .form-control-lg {
            border-radius: 0.5rem;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}