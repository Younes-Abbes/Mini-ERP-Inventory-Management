@model PurchaseOrder

<h2>Delete Purchase Order</h2>

<p>Are you sure you want to delete this order?</p>

<div>
    <h4>Order Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.supplier.CompanyName</dd>
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.createdAt.ToShortDateString()</dd>
        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>